# Navigation
alias ..='cd ..'
alias ...='cd ../..'

# docker
alias dp="docker ps"
alias di="docker images"

# docker-compose
alias dcd="docker-compose down"
alias dcu="docker-compose up"
alias dcdu="docker-compose down && docker-compose up"

# nvim
alias v=nvim
alias vi=nvim
alias vim=nvim

# ls
# ternary  [[ $b = 5 ]] && a="$c" || a="$d"
if [[ -x "$(command -v exa)" ]]; then
    echo ""
else
    echo ""
fi

# git
alias ga="git add"
alias ga="git branch"
alias gc="git commit"
alias gcm="git commit -m"
alias gt="git tag"
alias gun="git config user.name"
alias gue="git config user.email"

# tmux
alias tka="tmux kill-server"

# Other
alias c="clear"
alias beep="for i in {0..5}; do echo -ne '\007'; sleep 1; done"

# Additional aliases based on the machine
[ -f "${XDG_CONFIG_HOME}/local-aliasrc" ] && source "${XDG_CONFIG_HOME}/local-aliasrc"
