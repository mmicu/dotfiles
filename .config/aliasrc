# docker
alias dp="docker ps"
alias di="docker images"
alias drdi='docker rmi -f $(docker images -f "dangling=true" -q)'

# docker-compose
alias dcd="docker-compose down"
alias dcu="docker-compose up"
alias dcdu="docker-compose down && docker-compose up"

# ls
if [[ -x "$(command -v exa)" ]] && [[ "$USE_EXA" == "yes" ]]; then
    alias l="exa -al --color=always --group-directories-first"
    alias ll="exa -al --color=always --group-directories-first"
    alias ls="exa -a --color=always --group-directories-first"
else
    alias l="ls -aFGhl"
    alias ll="ls -aFGhl"
    alias ls="ls -FGhlS"
fi

# git
alias ga="git add"
alias gb="git branch"
alias gce="git clone"
alias gct="git commit"
alias gcm="git commit -m"
alias gl="git log --pretty=oneline"
alias gpl="git pull"
alias gph="git push"
alias gt="git tag"

# git config
alias gun="git config user.name"
alias gue="git config user.email"

# git submodule
alias gsu="git submodule update --init --recursive"

# vim
alias v=vim
alias vi=vim

# tmux
alias tka="tmux kill-server"
alias rtmux="tmux source $HOME/.config/tmux/tmux.conf"

# Other
alias ..='cd ..'
alias ...='cd ../..'
alias beep="for i in {0..5}; do echo -ne '\007'; sleep 1; done"
alias c="clear"
alias vrc="vim $HOME/.vimrc"

# Additional aliases based on the machine
[ -f "${XDG_CONFIG_HOME}/local-aliasrc" ] && source "${XDG_CONFIG_HOME}/local-aliasrc"

# Load SSH keys
ssh-add $HOME/.ssh/id_rsa_fraunhofer &> /dev/null
ssh-add $HOME/.ssh/id_rsa_github     &> /dev/null
